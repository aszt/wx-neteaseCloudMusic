@import "../../template/pageplay.wxss";
page {
  color: #666;
}

/* 导航 */

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
  text-align: center;
}

.nav_item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}

.nav_item_active {
  padding: 20rpx 45rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: black;
  display: inline-block;
}

/* swiper高度问题解决 */

.swiper {
  width: 100%;
  height: calc(100vh - 100rpx);
  /* height: 100vh; */
  padding: 0;
}

.swiper-item {
  overflow: auto;
}

.swiper-item::-webkit-scrollbar {
  display: none;
}

/* 轮播图 */

.slides_wrap {
  display: flex;
  justify-content: center;
}

.slides {
  width: 90%;
  height: 100%;
  margin-top: 20rpx;
}

.slides swiper {
  height: 250rpx;
}

.slides swiper swiper-item {
  border-radius: 12rpx;
}

.slides navigator {
  width: 100%;
  height: 100%;
}

.slides image {
  width: 100%;
  height: 100%;
}

/* 菜单栏 */

.menu_wrap {
  display: flex;
  padding: 5rpx;
  justify-content: space-around;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.menu_item {
  width: 100rpx;
}

.menu_icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #3c9;
  border-radius: 50%;
  line-height: 100rpx;
}

.menu_icon view {
  color: white;
}

.menu_item text {
  font-size: 24rpx;
  color: black;
}

/* 分割线 */

.partitionLine {
  width: 100%;
  height: 1rpx;
  border-top: #f5f5f5 solid 1rpx;
}

/* 推荐歌单 */

.songSheet_title_wrap {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  width: 94%;
  justify-content: space-between;
  margin-left: 3%;
}

.songSheet_title {
  padding: 20rpx 0;
}

.songSheet_title text {
  font-size: 40rpx;
  font-weight: 800;
  color: black;
}

.songSheet_square {
  margin: 20rpx 0;
  width: 130rpx;
  height: 40rpx;
  line-height: 31rpx;
  border: 1px solid #666;
  border-radius: 20rpx;
  text-align: center;
}

.songSheet_square text {
  font-size: 23rpx;
}

.songSheet_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-around;
}

.songSheet_item {
  width: 30%;
  margin-bottom: 20rpx;
}

.songSheet_img {
  position: relative;
}

.songSheet_img image {
  width: 100%;
  border-radius: 15rpx;
}

.songSheet_img .songSheet_info {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  color: #fff;
  font-size: 24rpx;
}

.songSheet_titles {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 新碟 */

.choose {
  font-size: 40rpx;
  font-weight: 800;
  color: black;
}

.notchoose {
  font-size: 10003rps;
  color: #3c9;
}